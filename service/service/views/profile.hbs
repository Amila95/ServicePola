  $(document).ready(function() {
    $('#branch').on('change',function(){
      console.log("rnjfr");
                        var branch=$(this).val();
                        

                         $.ajax({
                            type: 'POST',
                            url:'textdata',
                            dataType: 'json',
                            data:{branch},
                            success: function(response){
                              console.log('sucess');
                                add_fo(response); 
                            },
                            error: function(){
                               clear_fo();
                            }
                    });
                       
                        
                        
                    });

                function add_fo(response){
                    $('#fo').children('option').remove().trigger("liszt:updated");
                    $('#fo').append("<option value=''></option>");
                    $(response).each(function(index, fo_no) { 
                        $('#fo').append("<option value='"+fo_no.s_t_id +"'>"+fo_no.s_t_name +"</option>"); 
                    });
                    $('#fo').trigger("liszt:updated");

                }
                
                function clear_fo()
                {
                  $('#fo').children('option').remove().trigger("liszt:updated");
                  $('#fo').append("<option value=''></option>");
                  $('#fo').trigger("liszt:updated");
                }
  })
</script>